<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img"
        android:contentDescription="@string/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_margin="50dp"
        android:background="@drawable/logo" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="50dp">


        <EditText
            android:id="@+id/etUsername"
            android:layout_marginStart="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="@string/inpAccount"
            android:textCursorDrawable="@drawable/color_cursor"
            android:layout_marginLeft="0dp" />

        <ImageView
            android:contentDescription="@string/accountPng"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:src="@drawable/user"
            android:layout_marginLeft="0dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp">


        <EditText
            android:layout_marginStart="50dp"
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="@string/inpPwd"
            android:inputType="textPassword"
            android:layout_marginLeft="0dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="@string/pwdPng"
            android:layout_marginStart="20dp"
            android:src="@drawable/password"
            android:layout_marginLeft="0dp" />
        <ImageButton
            android:id="@+id/seePwd1"
            android:background="#00000000"
            android:layout_marginEnd="10dp"
            android:contentDescription="@string/seePwd"
            android:layout_alignParentEnd="true"
            android:src="@drawable/invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="invisible"
            android:layout_alignParentRight="true"
            android:layout_marginRight="0dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp">


        <EditText
            android:layout_marginStart="50dp"
            android:id="@+id/etPassword1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="@string/reEnterPwd"

            android:inputType="textPassword"
            android:layout_marginLeft="0dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="@string/pwdPng"
            android:layout_marginStart="20dp"
            android:src="@drawable/password"
            android:layout_marginLeft="0dp" />

        <ImageButton
            android:id="@+id/seePwd2"
            android:background="#00000000"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/invisible"
            android:tag="invisible"
            android:contentDescription="@string/seePwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="0dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:contentDescription="@string/verifyPng"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:src="@drawable/verify_code"
            android:layout_marginLeft="0dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/verify_code"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:hint="@string/inpVerify" />

            <ImageButton
                android:id="@+id/verify_image"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:contentDescription="@string/verifyImg"
                android:background="#00000000"
                android:scaleType="fitXY" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/shape_corner"
        android:text="@string/submit"
        android:textColor="#fff" />

</LinearLayout>
