<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#ec6a3e"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />
    <!--    android:popupTheme="@style/ThemeOverlay.AppCompat.Light" -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="30dp">
        <TextView
            android:id="@+id/select_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#ec6a3e" />

        <com.leyyx.leyyxsdk.DrawableHorizontalButton
            android:id="@+id/btn_alipay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/alipay"
            android:background="@drawable/alibutton"
            android:includeFontPadding="false"
            android:layout_marginTop="50dp"
            android:text="@string/alipay"
            android:textColor="#fff"
            android:textSize="20sp"
            android:drawableLeft="@drawable/alipay" />
        <com.leyyx.leyyxsdk.DrawableHorizontalButton
            android:id="@+id/btn_weixin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/weixin"
            android:drawableLeft="@drawable/weixin"
            android:background="@drawable/wxbutton"
            android:includeFontPadding="false"
            android:layout_marginTop="50dp"
            android:text="@string/weixin"
            android:textColor="#fff"
            android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>
